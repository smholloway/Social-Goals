<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "Achieve Anything" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>

<body>
  <div id="container">
    <div id="user_nav">
      <% if current_user %>
        Welcome <%= current_user.name %>
        <%= link_to "Sign out", signout_path  %>
      <% else %>
        <%= link_to "Sign in with Twitter", "/auth/twitter" %>
      <% end %>
    </div>
    <%= yield %>
  </div>
</body>
</html>
