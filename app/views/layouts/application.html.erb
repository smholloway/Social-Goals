<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "Achieve Anything" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <script src="/javascripts/jquery.min.js" type="text/javascript"></script>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>

<body>
  <div id="container">
    <div id="top_bar_outer">
      <div id="top_bar_inner">
        <div id="user_nav">
          <% if current_user %>
            Welcome <%= current_user.name %>
            <%= link_to "Sign out", signout_path  %>
          <% else %>
            <%= link_to "Sign in with Twitter", "/auth/twitter" %>
          <% end %>
        </div> <!-- user_nav -->
      </div> <!-- top_bar_inner -->
    </div> <!-- top_bar_outer -->

    <div id="main">
      <div id="main_top">
        <ul>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'My Goals', goals_index_path %></li>
          <li><%= link_to "My Achievements", achievements_index_path %></li>
        </ul>
      </div> <!-- main_top -->
        <%= yield %>
    </div> <!-- main -->
    <div style="clear:both"><br/></div>
  </div> <!-- container -->
</body>
</html>
