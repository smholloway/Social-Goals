<h1>Listing your current goals</h1>

<table style="display:none">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Public?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @goals.each do |goal| %>
  <tr>
    <td><%= link_to goal.name, goal %></td>
    <td><%= goal.description %></td>
    <td><% if goal.public == true %>Yes<% else %>No<% end %></td>
    <td><%= link_to 'Show', goal %></td>
    <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
    <td><%= link_to 'Delete', goal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div id="goals_list">
	<% @goals.each do |goal| %>
	<div id="goal_<%= goal.id %>" class="<%= cycle('goal_odd', 'goal_even') %>">
		<div class="goal_delete">
			<%= link_to 'x', goal, :confirm => 'Are you sure?', :method => :delete %>
		</div> <!-- goal_delete -->
		<div class="goal_name">
			<%= link_to goal.name, goal %>
		</div> <!-- goal_name -->
		<div class="goal_public">
			<% if goal.public == true %>(Public)<% else %>(Private)<% end %>
		</div> <!-- goal_public -->
		<div class="goal_description">
			<%= goal.description %>
		</div> <!-- goal_description -->
		<div style="display:none"><%= link_to 'Show', goal %></div>
		<div><%= link_to 'Edit', edit_goal_path(goal) %></div>
	</div> <!-- goal_<%= goal.id %> -->
	<% end %>
</div> <!-- goals_list -->

<br/>

<%= link_to 'New Goal', new_goal_path, :id => "new_goal_button", :class => "clickable_button" %>
