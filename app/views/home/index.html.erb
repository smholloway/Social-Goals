<% title "Home" %>
<div id="home">
	<h1>Welcome!</h1>
	<p>We want to help you succeed with an unobtrusive system that keeps you motivated and organized. We hope you'll like it.</p>
	<br>
	<div id="search">
	    <%= render :partial => 'home/search' %>
	</div>
	<br>
	<div id="recent_activity">
		<h1>Recent Activity</h1>
		<% if @goal.empty? %>
			No recent activity
		<% else %>
			<%= render :partial => "home/goal", :collection => @goals %>
		<% end %>
	</div> <!-- recent_activity -->
</div> <!-- home -->